<Window x:Class="TaskPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TaskPlanner.ViewModel"
        xmlns:local="clr-namespace:TaskPlanner"
        mc:Ignorable="d"
        Title="Task Planner" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel>
        <ListBox DockPanel.Dock="Left" ItemsSource="{Binding Subjects}"
                 SelectedValue="{Binding CurrentSubject}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Nr}" FontWeight="Bold" Margin="0 0 10 0" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <GroupBox>
            <ListBox ItemsSource="{Binding CurrentSubject.Tasks}">
            </ListBox>
        </GroupBox>
    </DockPanel>
</Window>
